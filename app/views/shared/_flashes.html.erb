<% if flash[:error].present? %>
  <div class="w-full bg-red-200 py-2 mb-6 flex justify-center items-center shadow-md">
    <div class="alert alert-error text-red-700 font-semibold text-sm">
      <%= flash[:error] %>
    </div>
  </div>
<% end %>

<% if flash[:notice].present? %>
  <div class="w-full bg-yellow-200 py-2 mb-6 flex justify-center items-center">
    <div class="alert alert-notice text-orange-600 font-semibold text-sm">
      <%= flash[:notice] %>
    </div>
  </div>
<% end %>

<% if flash[:success].present? %>
  <div class="w-full bg-blue-200 py-2 mb-6 flex justify-center items-center">
    <div class="alert alert-success text-blue-800 font-semibold text-sm">
      <%= flash[:success] %>
    </div>
  </div>
<% end %>
