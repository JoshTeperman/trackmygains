<%= content_for :page_title, 'Workout' %>

<div class="flex w-full h-full items-center justify-center">
  <% if @current_workout %>
    <div class="flex flex-col items-center">
      <span class="text-lg mb-6">You have an ongoing workout!</span>
      <%= link_to 'Resume', @current_workout, class: 'btn-primary' %>
    </div>
  <% else %>
    <%= link_to 'New Workout', workouts_path, method: :post, class: 'btn-primary' %>
  <% end %>
</div>
