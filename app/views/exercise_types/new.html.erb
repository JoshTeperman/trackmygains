<h1 class="text-2xl mb-6">New Exercise Type</h1>

<%= form_with(model: @exercise_type_form, url: exercise_types_path, local: true) do |f| %>
  <%= render 'shared/form_errors', object: @exercise_type_form %>
  <div class="form-group">
    <%= f.label :name%>
    <%= f.text_field :name, class: 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :category %>
    <%= f.select :category, ExerciseType.categories.keys.map { |k| [k.capitalize, k] }, include_blank: 'Choose...', class: 'form-control' %>
  </div>

  <div class="form-group mb-0">
    <%= f.label :targets %>
    <%= f.text_field :targets %>
  </div>

  <div class="flex justify-center">
    <%= f.submit 'Create', class: "btn-primary" %>
  </div>
<% end %>
