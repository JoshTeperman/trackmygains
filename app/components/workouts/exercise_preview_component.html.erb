<%= link_to path, class: "block relative bg-white border-2 border-green-800 rounded-sm p-8 mb-4 hover:bg-gray-400 cursor-pointer transition-colors ease-out duration-150 last:mb-0 last:border-b-0" do %>
  <%= render_svg('icons/close', size: 'xsmall', class: 'fill-current text-green-900 absolute top-0 right-0 m-2 hover:bg-orange-500') %>
  <div class="flex flex-col">
    <div class="flex justify-between">
      <h2 class="text-2xl uppercase font-bold"><%= name %></h2>
    </div>
    <p class="text-md mt-2">5x15 3x10</p>
  </div>
<% end %>
