<div class="flex flex-col border-2 border-green-800 bg-white w-full p-4 mb-4">
  <div class='flex justify-between'>
    <p><%= start_time %></p>
    <div class="flex">
      <p class='mr-2'>2km</p>
      <p class='mr-2'>843kg</p>
      <p>15 sets</p>
    </div>
  </div>
  <p class='text-xs'><%= duration %></p>
  <div class="flex flex-col mt-4">
    <% if exercises.present? %>
      <ul>
        <% exercises.each do |exercise| %>
          <li class="flex mb-1">
            <p class='text-lg w-1/2'><%= exercise.name %></p>
            <p class="w-1/2">2km</p>
          </li>
        <% end %>
      </ul>
    <% end %>
  </div>
</div>


